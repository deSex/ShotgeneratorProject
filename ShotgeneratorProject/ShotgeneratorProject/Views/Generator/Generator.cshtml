<div class="form-area" ng-controller="generatorOptionsController">
    <div class="col-md-12">
        <h1 class="text-center">Admininställningar </h1>
        <p class="text-center">(för att du ska kunna ändra inställningarna under matchens gång)</p>
    </div>
    <form>
        <fieldset class="form-group col-md-6">
            <label for="exampleInputEmail1">Användarnamn</label>
            <input type="text" class="form-control" id="exampleInputEmail1" ng-model="user.username" placeholder="Användarnamn">
        </fieldset>
        <fieldset class="form-group col-md-6">
            <label for="exampleInputPassword1">Lösenord</label>
            <input type="password" class="form-control" id="exampleInputPassword1" ng-model="user.password" placeholder="Lösenord">
        </fieldset>
        <div class="row default-margin-top">

        </div>

        <h1 class="text-center">Hur ska shotgeneratorn bete sig?</h1>
        <fieldset class="form-group col-md-6">

            <label for="exampleSelect1">Intervall</label>
            <select class="form-control" id="exampleSelect1" ng-model="user.shotSettings.interval">
                <option>10 min</option>
                <option>20 min</option>
                <option>30 min</option>
                <option>40 min</option>
                <option>50 min</option>
                <option>1 timme</option>
            </select>
        </fieldset>
        <div class="row">
            <div class="col-md-12">
                <label for="mode-option-1">Läge</label>
                <fieldset class="form-group">
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="mode-option-1" value="1" checked ng-model="user.shotSettings.mode">
                            Hardcore Mode <i class="fa fa-question-circle" aria-hidden="true"></i>
                        </label>
                        <label>
                            <input type="radio" name="optionsRadios" id="mode-option-2" value="2" checked ng-model="user.shotSettings.mode">
                            Softcore Mode <i class="fa fa-question-circle" aria-hidden="true"></i>
                        </label>
                        <label>
                            <input type="radio" name="optionsRadios" id="mode-option-3" value="3" checked ng-model="user.shotSettings.mode">
                            Fast Mode <i class="fa fa-question-circle" aria-hidden="true"></i>
                        </label>
                    </div>
                </fieldset>
            </div>
        </div>

        <h1 class="text-center">Spelare</h1>
        <fieldset class="form-group col-md-6">
            <label for="exampleSelect1">Antal spelare</label>
            <input ng-model="numOfPlayers" type="number" class="form-control" />
        </fieldset>
        <fieldset class="form-group col-md-6" ng-repeat="field in fields">
            <div id="player" class="form-group" ng-model="user.shotSettings.players">
                <label for="player{{$index + 1}}">Spelare {{$index + 1}}</label>
                <input class="form-control" {{$index + 1}} type="text" placeholder="Förnamn" ng-model="user.shotSettings.players.player.firstname[$index +1]"/>
                <input class="form-control" {{$index +1}} type="text" placeholder="Efternamn"ng-model="user.shotSettings.players.player.lastname[$index +1]"/>
            </div>
        </fieldset>

        <div class="col-md-12">

            <button type="submit" ng-click="receiveUser()" class="btn btn-primary stack-top text-center center-block">Starta Shotgeneratorn</button>
            @Html.ActionLink("Nu kör vi!", "Index", null, new { @class = "btn btn-default" })
        </div>
    </form>
</div>